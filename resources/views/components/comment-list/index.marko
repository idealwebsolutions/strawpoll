<if(!input.comments.length)>
    <div class="content is-small has-text-grey-light has-text-centered">
      <span class="icon is-large">
        <i class="fa fa-2x fa-comment-slash"></i>
      </span>
      <h2>No comments found.</h2>
    </div>
</if>
<else>
  <for|comment| of=input.comments>
    <comment authenticated=input.authenticated data=comment />
  </for>
</else>
